<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="logger" fileName="logs/performhance.log" append="true">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} %-5p %c{2} - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="logger"/>
        </Root>
    </Loggers>
</Configuration>